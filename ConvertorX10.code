    <!-- Hidden file input -->
    <input type="file" id="fileInput" multiple accept="image/*" style="display: none;" onchange="handleFileSelect(event)">

    <script>
        // Global variables
        let selectedFiles = [];
        let isConverting = false;

        // Initialize app
        window.addEventListener('load', () => {
            // Hide splash screen after 3 seconds
            setTimeout(() => {
                const splash = document.getElementById('splashScreen');
                const mainContainer = document.getElementById('mainContainer');
                
                splash.style.opacity = '0';
                setTimeout(() => {
                    splash.style.display = 'none';
                    mainContainer.classList.add('show');
                }, 500);
            }, 3000);
        });

        // File selection functions
        function selectSingleFile() {
            const input = document.getElementById('fileInput');
            input.multiple = false;
            input.click();
        }

        function selectMultipleFiles() {
            const input = document.getElementById('fileInput');
            input.multiple = true;
            input.click();
        }

        function handleFileSelect(event) {
            const files = Array.from(event.target.files);
            selectedFiles = [...selectedFiles, ...files];
            updateFileList();
            event.target.value = ''; // Reset input
        }

        function updateFileList() {
            const fileList = document.getElementById('fileList');
            const convertBtn = document.getElementById('convertBtn');
            
            if (selectedFiles.length === 0) {
                fileList.innerHTML = '<div style="text-align: center; color: #d32f2f; padding: 20px;">No hay archivos seleccionados</div>';
                convertBtn.disabled = true;
            } else {
                fileList.innerHTML = selectedFiles.map((file, index) => `
                    <div class="file-item">
                        <span>üìÑ ${file.name}</span>
                        <span class="remove-btn" onclick="removeFile(${index})">‚úï</span>
                    </div>
                `).join('');
                convertBtn.disabled = false;
            }
            
            updateStatus(`${selectedFiles.length} archivo(s) seleccionado(s)`);
        }

        function removeFile(index) {
            selectedFiles.splice(index, 1);
            updateFileList();
        }

        // Options toggle
        function toggleOptions() {
            const format = document.querySelector('input[name="format"]:checked').value;
            const qualityControl = document.getElementById('qualityControl');
            const icoOptions = document.getElementById('icoOptions');
            
            if (format === 'JPG') {
                qualityControl.classList.remove('hidden');
                icoOptions.classList.add('hidden');
            } else if (format === 'ICO') {
                qualityControl.classList.add('hidden');
                icoOptions.classList.remove('hidden');
            } else {
                qualityControl.classList.add('hidden');
                icoOptions.classList.add('hidden');
            }
        }

        // Quality slider
        function updateQuality(value) {
            document.getElementById('qualityValue').textContent = value;
        }

        // Conversion functions
        async function convertImages() {
            if (selectedFiles.length === 0 || isConverting) return;
            
            isConverting = true;
            const convertBtn = document.getElementById('convertBtn');
            convertBtn.disabled = true;
            convertBtn.innerHTML = '<span class="loading"></span> Convirtiendo...';
            
            const format = document.querySelector('input[name="format"]:checked').value;
            const quality = parseInt(document.getElementById('qualitySlider').value);
            
            let successCount = 0;
            
            for (let i = 0; i < selectedFiles.length; i++) {
                const file = selectedFiles[i];
                updateStatus(`Convirtiendo ${i + 1}/${selectedFiles.length}: ${file.name}`);
                updateProgressInfo(`${Math.round((i / selectedFiles.length) * 100)}%`);
                
                try {
                    if (format === 'ICO') {
                        await convertToICO(file);
                    } else {
                        await convertImage(file, format, quality);
                    }
                    successCount++;
                } catch (error) {
                    console.error('Error converting file:', error);
                }
            }
            
            // Reset UI
            isConverting = false;
            convertBtn.disabled = false;
            convertBtn.innerHTML = 'Convertir im√°genes';
            updateStatus(`Conversi√≥n completada: ${successCount}/${selectedFiles.length} archivos convertidos`);
            updateProgressInfo('');
            
            // Show completion message
            if (successCount > 0) {
                setTimeout(() => {
                    showNotification(`¬°Conversi√≥n completada! ${successCount} archivos convertidos exitosamente.`);
                }, 500);
            }
        }

        async function convertImage(file, format, quality) {
            return new Promise((resolve, reject) => {
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                const img = new Image();
                
                img.onload = () => {
                    canvas.width = img.width;
                    canvas.height = img.height;
                    
                    // Handle transparency for JPG
                    if (format === 'JPG') {
                        ctx.fillStyle = '#FFFFFF';
                        ctx.fillRect(0, 0, canvas.width, canvas.height);
                    }
                    
                    ctx.drawImage(img, 0, 0);
                    
                    canvas.toBlob((blob) => {
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `${file.name.split('.')[0]}.${format.toLowerCase()}`;
                        a.click();
                        URL.revokeObjectURL(url);
                        resolve();
                    }, `image/${format.toLowerCase()}`, quality / 100);
                };
                
                img.onerror = reject;
                img.src = URL.createObjectURL(file);
            });
        }

        async function convertToICO(file) {
            // Get selected sizes
            const sizes = [];
            document.querySelectorAll('#icoOptions input[type="checkbox"]:checked').forEach(cb => {
                sizes.push(parseInt(cb.value));
            });
            
            if (sizes.length === 0) {
                throw new Error('No sizes selected for ICO');
            }
            
            // For simplicity, we'll create a PNG for the largest size
            // In a real implementation, you'd need a proper ICO encoder
            const maxSize = Math.max(...sizes);
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            const img = new Image();
            
            return new Promise((resolve, reject) => {
                img.onload = () => {
                    canvas.width = maxSize;
                    canvas.height = maxSize;
                    
                    // Center and scale image
                    const scale = Math.min(maxSize / img.width, maxSize / img.height);
                    const width = img.width * scale;
                    const height = img.height * scale;
                    const x = (maxSize - width) / 2;
                    const y = (maxSize - height) / 2;
                    
                    ctx.drawImage(img, x, y, width, height);
                    
                    canvas.toBlob((blob) => {
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `${file.name.split('.')[0]}.ico`;
                        a.click();
                        URL.revokeObjectURL(url);
                        resolve();
                    }, 'image/png');
                };
                
                img.onerror = reject;
                img.src = URL.createObjectURL(file);
            });
        }

        // Status functions
        function updateStatus(message) {
            document.getElementById('statusText').textContent = message;
        }

        function updateProgressInfo(info) {
            document.getElementById('progressInfo').textContent = info;
        }

        // Notification function
        function showNotification(message) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
                color: white;
                padding: 15px 25px;
                border-radius: 10px;
                box-shadow: 0 10px 30px rgba(183, 28, 28, 0.3);
                z-index: 10000;
                animation: slideInRight 0.5s ease-out;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOutRight 0.5s ease-out';
                setTimeout(() => notification.remove(), 500);
            }, 3000);
        }

        // Add slide animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideInRight {
                from { opacity: 0; transform: translateX(100px); }
                to { opacity: 1; transform: translateX(0); }
            }
            @keyframes slideOutRight {
                from { opacity: 1; transform: translateX(0); }
                to { opacity: 0; transform: translateX(100px); }
            }
        `;
        document.head.appendChild(style);

        // About modal functions
        function showAboutModal() {
            document.getElementById('aboutModal').classList.add('show');
        }

        function closeAboutModal() {
            document.getElementById('aboutModal').classList.remove('show');
        }

        // Close modal when clicking outside
        document.getElementById('aboutModal').addEventListener('click', (e) => {
            if (e.target.id === 'aboutModal') {
                closeAboutModal();
            }
        });

        // Add keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeAboutModal();
            }
            if (e.ctrlKey && e.key === 'o') {
                e.preventDefault();
                selectMultipleFiles();
            }
        });

        // Add help menu (right-click context)
        document.addEventListener('contextmenu', (e) => {
            e.preventDefault();
            showAboutModal();
        });
    </script>
